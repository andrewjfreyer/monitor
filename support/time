# TIME BASED TRIGGERS
#
# ----------------------------------------------------------------------------------------


# ----------------------------------------------------------------------------------------
# PERIODIC TRIGGER TO MAIN LOOP
# ----------------------------------------------------------------------------------------
periodic_trigger (){
	while : ; do 
		sleep 2
		echo "TIME" > main_pipe
	done
}

# ----------------------------------------------------------------------------------------
# PERIODIC TRIGGER TO MAIN LOOP
# ----------------------------------------------------------------------------------------
refresh_databases (){
	while : ; do 
		sleep 15
		echo "REFR" > main_pipe
	done
}